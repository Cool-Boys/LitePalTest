<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.app.yxl.litepaltest.MainActivity">

    <Button
        android:text="创建数据库"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:id="@+id/create_database"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="添加数据"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_data"
        android:layout_below="@+id/create_database"
        android:layout_alignLeft="@+id/create_database"
        android:layout_alignStart="@+id/create_database"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="更新数据"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_data"
        android:layout_alignLeft="@+id/add_data"
        android:layout_alignStart="@+id/add_data"
        android:id="@+id/update_data"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="删除数据"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/update_data"
        android:layout_alignLeft="@+id/update_data"
        android:layout_alignStart="@+id/update_data"
        android:id="@+id/delete_data"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="查询数据"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/delete_data"
        android:layout_alignLeft="@+id/delete_data"
        android:layout_alignStart="@+id/delete_data"
        android:id="@+id/query_data"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
